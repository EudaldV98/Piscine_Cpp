NAME =	Span	

C++ =	clang++

FLAG =	-Wall -Werror -Wextra

SRC =	main.cpp span.cpp

OBJ =	main.o span.o

all : $(NAME)

$(NAME) : $(OBJ)
		$(C++) $(FLAGS) $(OBJ) -o $(NAME)

clean :
		rm -rf $(OBJ)

fclean : clean
		rm -rf $(NAME)

re : fclean all

.PHONY : all clean fclean re
